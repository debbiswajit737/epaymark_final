<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.epaymark.epay.data.viewMovel.AuthViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:shadowRadius="@dimen/_8sdp"
            tools:context=".ui.activity.DashBoardActivity">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:text="@string/basic_information"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />
                    <!--name start-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <!--name End-->

                    <!--mobile start-->
                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="@string/enter_name"

                        android:inputType="textCapWords"
                        android:padding="@dimen/_5sdp"
                        android:text="@={viewModel.name}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size"
                        app:addTextChangeListener="@{viewModel}"
                        app:requestFocus="@{viewModel.nameErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserrat_regular_400"


                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:text="@{viewModel.nameError}"
                        app:hideErrorTextView="@{viewModel.nameErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/mobile_no_reg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:id="@+id/et_mob"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="@string/enter_mobile_no_reg"
                        android:inputType="number"
                        android:longClickable="false"
                        android:maxLength="10"
                        android:padding="@dimen/_5sdp"
                        android:text="@={viewModel.mobile}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size"
                        app:addTextChangeListener="@{viewModel}"
                        app:requestFocus="@{viewModel.mobileErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.mobileError}"
                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        app:hideErrorTextView="@{viewModel.mobileErrorVisible}" />
                    <!--mobile End-->

                    <!--Alternate Mobile start-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/alternate_mobile_no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:id="@+id/et_a_mob"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="@string/enter_alternate_mobile_no"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/_5sdp"
                        android:text="@={viewModel.alternativeMobile}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size"
                        app:addTextChangeListener="@{viewModel}"
                        app:requestFocus="@{viewModel.alternativeMobileErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.alternativeMobileError}"
                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        app:hideErrorTextView="@{viewModel.alternativeMobileErrorVisible}" />
                    <!--Alternate Mobile End-->


                    <!--Email start-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/email_id"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <!--Email End-->


                    <!--Address start-->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="@string/enter_email_id"
                        android:inputType="textWebEmailAddress"
                        android:longClickable="false"
                        android:padding="@dimen/_5sdp"
                        android:text="@={viewModel.email}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size"
                        app:addTextChangeListener="@{viewModel}"
                        app:requestFocus="@{viewModel.emailErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.emailError}"
                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        app:hideErrorTextView="@{viewModel.emailErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height_address"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:gravity="start"
                        android:hint="@string/enter_address"
                        android:inputType="text"
                        android:longClickable="false"
                        android:maxLines="50"
                        android:padding="@dimen/_5sdp"
                        android:scrollbars="vertical"
                        android:text="@={viewModel.address}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size"
                        app:addTextChangeListener="@{viewModel}"
                        app:requestFocus="@{viewModel.addressErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.addressError}"
                        android:textColor="@color/pink2"

                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        app:hideErrorTextView="@{viewModel.addressErrorVisible}" />
                    <!--Address End-->


                    <!--Pin Code start-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/pin_code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="@string/enter_pin_code"
                        android:inputType="number"
                        android:longClickable="false"
                        android:maxLength="6"
                        android:padding="@dimen/_5sdp"
                        android:text="@={viewModel.pinCode}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size"
                        app:addTextChangeListener="@{viewModel}"
                        app:requestFocus="@{viewModel.pinCodeErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.pinCodeError}"
                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        app:hideErrorTextView="@{viewModel.pinCodeErrorVisible}" />
                    <!--Pin Code End-->


                    <!--Date of Birth start-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <!--Date of Birth End-->


                    <!--State start-->
                    <TextView
                        android:id="@+id/tv_dob"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="@string/select_date"
                        android:inputType="date"
                        android:text="@{viewModel.dateOfBirth}"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.dateOfBirthError}"
                        app:hideErrorTextView="@{viewModel.dateOfBirthErrorVisible}"

                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/state"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:gravity="center_vertical"
                        android:hint="@string/state_hint"
                        android:padding="@dimen/_5sdp"
                        android:text="@{viewModel.state}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.stateError}"
                        app:hideErrorTextView="@{viewModel.stateErrorVisible}"
                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/field_bg"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_state"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/edit_text_margin_top"

                            android:background="@drawable/field_bg_search_bg"
                            android:drawableEnd="@drawable/baseline_search_24"
                            android:hint="@string/state_hint"
                            android:inputType="text"
                            android:longClickable="false"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/edit_text_size"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycle_state"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:visibility="gone"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/state_list" />

                        <TextView
                            android:id="@+id/tv_state_list_search"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_marginTop="@dimen/edit_text_title_margin_top"
                            android:background="@drawable/field_bg_dropdown"
                            android:drawableEnd="@drawable/baseline_arrow_drop_up_24"
                            android:fontFamily="@font/montserrat_medium_500"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_10sdp"
                            android:text="@string/state_hint"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!--State End-->


                    <!--City/District* start-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/city_district"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="@string/city_district_hint"
                        android:inputType="text"
                        android:text="@{viewModel.city}"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.cityError}"
                        app:hideErrorTextView="@{viewModel.cityErrorVisible}"
                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/field_bg"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_city"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/edit_text_margin_top"
                            android:background="@drawable/field_bg_search_bg"
                            android:drawableEnd="@drawable/baseline_search_24"
                            android:hint="@string/search"
                            android:inputType="text"
                            android:longClickable="false"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/edit_text_size"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycle_city"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:scrollbars="horizontal"
                            android:visibility="gone"

                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/state_list" />

                        <TextView
                            android:id="@+id/tv_city_list_search"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:background="@drawable/field_bg_dropdown"
                            android:drawableEnd="@drawable/baseline_arrow_drop_up_24"
                            android:fontFamily="@font/montserrat_medium_500"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_10sdp"
                            android:text="@string/city_district_msg"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:visibility="gone" />
                    </LinearLayout>
                    <!--City/District* End-->


                    <!--Area start-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/area"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="Enter Area"
                        android:inputType="text"
                        android:longClickable="false"
                        android:padding="@dimen/_5sdp"
                        android:text="@={viewModel.area}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size"
                        app:addTextChangeListener="@{viewModel}"
                        app:requestFocus="@{viewModel.areaErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.areaError}"
                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        app:hideErrorTextView="@{viewModel.areaErrorVisible}" />
                    <!--Area End-->


                    <!--Gender start-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/gender"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="Gender"
                        android:inputType="textCapWords"
                        android:paddingVertical="@dimen/_5sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:popupBackground="@color/gray2"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="Choose Gender"
                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone" />
                    <!--Gender End-->


                    <!--Aadhar start-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/aadhar_no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="@string/enter_aadhar_no"
                        android:inputType="number"
                        android:maxLength="12"
                        android:longClickable="false"
                        android:padding="@dimen/_5sdp"
                        android:text="@={viewModel.aadhar}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size"
                        app:addTextChangeListener="@{viewModel}"
                        app:requestFocus="@{viewModel.aadharErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.aadharError}"
                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        app:hideErrorTextView="@{viewModel.aadharErrorVisible}" />
                    <!--Aadhar End-->


                    <!--PAN Card No start-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/pan_card_no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_bg"
                        android:hint="@string/enter_pan_card_no"
                        android:inputType="textCapCharacters"
                        android:longClickable="false"
                        android:padding="@dimen/_5sdp"
                        android:maxLength="10"
                        android:text="@={viewModel.panCardNo}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size"
                        app:addTextChangeListener="@{viewModel}"
                        app:requestFocus="@{viewModel.panCardNoErrorVisible}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular_400"
                        android:text="@{viewModel.panCardNoError}"
                        android:textColor="@color/pink2"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        app:hideErrorTextView="@{viewModel.panCardNoErrorVisible}" />
                    <!--PAN Card No End-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_text_title_margin_top"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/owner_pan_card"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout
                        android:id="@+id/ll_pan"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="@dimen/edit_text_margin_top"
                        android:background="@drawable/field_image_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_pancard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:hint="@string/choose_file"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/edit_text_size" />

                        <TextView
                            android:id="@+id/tv_pancard_image"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:background="@drawable/image_edittext_field_bg"
                            android:gravity="center_vertical"
                            android:hint="@string/no_file_chosen"
                            android:padding="@dimen/_5sdp"
                            android:text="@{viewModel.llPan}"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/edit_text_size" />


                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
