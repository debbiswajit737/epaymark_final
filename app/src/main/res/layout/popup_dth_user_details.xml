<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="model"
            type="com.epaymark.epay.data.model.UserInfoModel" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Subscriber info"
    android:textColor="@color/logo_color"
    android:textSize="@dimen/_10ssp"
    android:gravity="center_horizontal"
    android:padding="@dimen/_5sdp"
    android:background="@color/logo_second_color"
    android:fontFamily="@font/open_sans_medium"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_gravity="end"
            android:background="@color/white"
            android:padding="@dimen/_1sdp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/logo_second_color"/>
        <TextView
            android:id="@+id/tv_balence_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:textSize="@dimen/_11ssp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/open_sans_medium"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/logo_second_color"
            android:layout_marginHorizontal="@dimen/_10sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`₹`+model.balence}"
            tools:text="₹1009"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_16ssp"
            android:layout_toEndOf="@+id/tv_balence_title"
            android:fontFamily="@font/open_sans_medium"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/logo_color"
            android:layout_marginHorizontal="@dimen/_10sdp"/>
    </RelativeLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{model.name}"
        tools:text="Test User"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_e_bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                tools:text="₹1000"
                android:fontFamily="@font/open_sans_medium"
                android:text="@{`₹`+model.balence}"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@color/logo_second_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(balance)"/>
        </LinearLayout>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                tools:text="23-08-2023"
                android:fontFamily="@font/open_sans_medium"
                android:text="@{`₹`+model.nextRecharge}"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@color/logo_second_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(next recharge)"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                tools:text="₹789"
                android:fontFamily="@font/open_sans_medium"
                android:text="@{`₹`+model.monthly}"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@color/logo_second_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(monthly)"/>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/gray"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/open_sans_e_bold"
        android:gravity="center_horizontal"/>
</LinearLayout>
</layout>