        >-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgOperatorLogo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:scaleType="centerCrop"
