<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <!--<variable
            name="model"
            type="com.epaymark.epay.data.model.UserInfoModel" />-->
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@null"
        app:cardCornerRadius="@dimen/_12sdp"
        android:layout_margin="@dimen/_20sdp"
        android:elevation="@dimen/_12sdp"

        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"

    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/logo_second_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/open_sans_medium"
            android:gravity="center_horizontal"
            android:padding="@dimen/_5sdp"

            android:text="Wallet balence"
            android:textColor="@color/logo_color"
            android:textSize="@dimen/_10ssp" />
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/logo_color"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/open_sans_medium"
        android:text="Main Wallet"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,021"
        android:fontFamily="@font/montserrat_medium_500"
        android:textSize="@dimen/_17ssp"

        android:layout_gravity="center_horizontal"
        android:textColor="@color/logo_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Line Amount: 2,512.00)"

        android:fontFamily="@font/open_sans_medium"
        android:textSize="@dimen/_12ssp"

        android:layout_gravity="center_horizontal"
        android:textColor="@color/logo_second_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/open_sans_medium"
        android:text="Cashout Wallet"

        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5,464.26"
        android:fontFamily="@font/montserrat_medium_500"
        android:textSize="@dimen/_17ssp"

        android:layout_gravity="center_horizontal"
        android:textColor="@color/logo_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Line Amount: 500.00)"
        android:paddingBottom="@dimen/_10sdp"
        android:fontFamily="@font/open_sans_medium"
        android:textSize="@dimen/_12ssp"

        android:layout_gravity="center_horizontal"
        android:textColor="@color/logo_second_color"/>

</LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>